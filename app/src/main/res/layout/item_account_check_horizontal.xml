<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="6dp"
    android:background="#7be4e2e2"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_billdata"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="单据日期"
            android:gravity="center_horizontal"
            android:textSize="15sp" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="#aac9c7c7" />

        <TextView
            android:id="@+id/tv_abstract"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="摘要"
            android:gravity="center_horizontal"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_orderno"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单号"
            android:gravity="center_horizontal"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_carno"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="车号"
            android:gravity="center_horizontal"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_storage"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="仓库"
            android:gravity="center_horizontal"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_wavehouse"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="仓位"
            android:gravity="center_horizontal"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_productname"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="产品名称"
            android:gravity="center_horizontal"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_model"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="规格型号"
            android:gravity="center_horizontal"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_auxnum"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="辅助数量"
            android:gravity="center_horizontal"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_realnum"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="实发数量"
            android:gravity="center_horizontal"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_saleprice"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="销售单价"
            android:gravity="center_horizontal"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_shouldmoney"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:text="应收金额"
            android:gravity="center_horizontal"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_givemoney"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:text="收款金额"
            android:gravity="center_horizontal"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_lastmoney"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="期末金额"
            android:gravity="center_horizontal"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_hastax"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="是否含税"
            android:gravity="center_horizontal"
            android:textSize="15sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>