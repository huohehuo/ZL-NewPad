<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/main_page_tab_bg_color"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/bottom_btn_sale"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_sale"
            android:layout_width="25dp"
            android:src="@mipmap/unsale"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/tv_sale"
            android:textColor="@color/fragment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="销售"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_btn_setting"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="25dp"
            android:src="@mipmap/setting_bottom"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/tv_setting"
            android:textColor="@color/fragment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"/>
    </LinearLayout>

</LinearLayout>